rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users: only the user can read/write their own profile and subcollections
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Allow access to profile subcollection
      match /profile/{profileId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Allow access to meal_logs subcollection
      match /meal_logs/{logId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Logs: users can create and read their own logs; no updates/deletes
    match /logs/{logId} {
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      allow update, delete: if false;
    }

    // Public read-only (optional)
    match /public/{doc=**} {
      allow read: if true;
    }
  }
}
